@model IList<Auge.MVC.Models.AmbienteVM>

<div class="row margin-bottom-10">
    <div class="col-md-12">
        <a id="addAmbiente" class="btn btn-primary">Adicionar Ambiente</a>
        @*<input type="submit" value="Novo Ambiente" class="btn btn-default" />*@
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Ambiente</th>
                    <th>Apelido</th>
                    <th>Situação</th>
                    <th>Anexo</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 3; i++)
                {
                    <tr class="@(i % 2 == 0 ? "odd" : "even") ">
                        @*gradeX*@
                        <td>Ambiente @i.ToString()</td>
                        <td>Apelido @i.ToString()</td>
                        <td>Situação @i.ToString()</td>
                        <td class="center">Anexo @i.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

