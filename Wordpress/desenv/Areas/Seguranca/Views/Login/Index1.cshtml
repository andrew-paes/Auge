@model Auge.MVC.Areas.Seguranca.Models.LoginVM

@{
    ViewBag.Title = "Auge";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Soluções AUGE</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <div class="form-group">
                            @Html.EditorFor(model => model.Usuario, new { @class = "form-control", placeholder = "Usuário" })
                            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Senha, new { @class = "form-control", placeholder = "Senha" })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                        </div>

                        <a href="index.html" class="btn btn-lg btn-success btn-block">Entrar</a>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
